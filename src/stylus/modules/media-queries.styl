@media (min-width:320px)
	body
		&:after,
		&:before
			display none
			


@media (min-width:$screen-sm)  and (orientation: portrait)
	.col-video
		margin-top 20rem

@media (min-width:$screen-sm)

	header
		.logos
			margin-left 25%
			position relative
			text-align center
			width 50%
	
	.play
		display block

@media (min-width:800px)
	body
		&:after
			display block
			height (57.9rem/3)
			width (45.7rem/3)
	.col-video
		margin-top 5rem


@media (min-width:1000px)
	body
		&:after
			display block
			height (57.9rem/2)
			width (45.7rem/2)
			
@media (min-width:$screen-lg )
	body
		&:before
			display block
			width 24.8rem
			
	footer
		font-size 2rem

@media (min-width:1600px)
	body
		&:after
			display block
			height 57.9rem
			width 45.7rem
		&::before
			width 34.8rem
			
	.col-video
		margin-top 10rem