.row
	make-row()
	margin 0 auto
	max-width $site-width //medida de la caja fija del dise√±o general
	padding-left 10px
	padding-right @padding-left

body
	background-image url("../images/background.jpg")
	background-position center 0
	background-repeat no-repeat
	background-size auto
	height 100%
	position relative
	transition all 0.5s ease
	width 100%

	
.cabina-superior
	background-image url("../images/cabina-superior.png")
	background-position center bottom
	background-repeat no-repeat
	background-size 105%
	height 170px
	height 20vh
	left 0
	margin 0
	max-height 170px
	min-height 120px
	padding 0
	position fixed
	top 0
	width 100%
	

.cabina-inferior
	background-image url("../images/cabina-inferior.png")
	background-position center top
	background-repeat no-repeat
	background-size 105%
	bottom 0
	height 170px
	height 20vh
	left 0
	margin 0
	max-height 170px
	min-height 120px
	padding 0
	position fixed
	width 100%
	
.contenidos
	width 100%
	z-index 2
	.logos
		color #c7a653
		position relative
		text-align center
		width 100%
		
		img
			width 35%
			
	.contenido-v
		box-sizing border-box
		margin-top 2%
		position relative
		width 70%
		
		.marco-video
			left 0
			margin-left -2.5%
			margin-top -2.5%
			pointer-events none
			position absolute
			top 0
			width 100%
			z-index 10
			
			img
				width 105%
		
		.video
			height auto
			text-align center
			width 100%
				
				
.contenidos-webkit
	align-items center
	display flex
	flex-direction column
	height 100%
	height 100vh
	justify-content center
	
#sparks
	bottom 0
	height 100%
	left 0
	overflow hidden
	pointer-events none
	position absolute
	right 0
	top 0
	width 100%
	z-index -1

	.spark
		animation sparks 4.5s linear 0s infinite normal
		background-color rgba(199, 166, 83, 0.2)
		border-radius 100%
		box-shadow 0px 0px 5px rgba(19, 83, 112, 0.2)
		height 3rem
		position absolute
		width @height