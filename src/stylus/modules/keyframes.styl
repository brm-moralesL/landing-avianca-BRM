@keyframes sparks
	0%
		opacity 1
		filter blur(5px)
		transform scale(1)
		
	25%
		opacity 0
		filter blur(5px)
		transform scale(0.5)
		
	50%
		opacity 1
		filter blur(5px)
		transform scale(1)
		
	75%
		opacity 0
		filter blur(5px)
		transform scale(0.5)
		
	100%
		opacity 1
		filter blur(5px)
		transform scale(1)