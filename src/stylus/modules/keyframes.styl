@keyframes sparks
	0%
		filter blur(5px)
		opacity 1
		transform scale(1)
		
	25%
		filter blur(5px)
		opacity 0
		transform scale(0.5)
		
	50%
		filter blur(5px)
		opacity 1
		transform scale(1)
		
	75%
		filter blur(5px)
		opacity 0
		transform scale(0.5)
		
	100%
		filter blur(5px)
		opacity 1
		transform scale(1)